<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_white_rad_8"
        android:orientation="vertical"
        android:paddingStart="29dp"
        android:paddingTop="24dp"
        android:paddingEnd="29dp"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/ivHoroscopeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/star_hwangso" />

        <TextView
            android:id="@+id/tvHoroscopeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_two"
            android:textSize="12sp"
            tools:text="황소자리" />

        <TextView
            android:id="@+id/tvHoroscopeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brownish_grey_three"
            android:textSize="10sp"
            tools:text="August 23~September 22" />

        <TextView
            android:id="@+id/tvHoroscopeContentsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/very_light_pink_two"
            android:textSize="11sp"
            tools:text="2019년 12월 20일 (금)" />

        <TextView
            android:id="@+id/tvHoroscopeContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/greyish_brown"
            android:textSize="14sp"
            tools:text="contents" />

    </LinearLayout>
</FrameLayout>
