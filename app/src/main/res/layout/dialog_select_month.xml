<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="340.2dp"
    android:layout_height="587.5dp"
    android:layout_marginBottom="52.5dp"
    android:layout_gravity="center|bottom"
    android:background="@drawable/dialog_delete">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_up"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18.5dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12.5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/down"/>

</LinearLayout>